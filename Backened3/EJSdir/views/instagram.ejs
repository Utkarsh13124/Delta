<%- include("includes/head.ejs")  %>
<body>
    <h1>This page belongs to @<%= data.name  %> </h1>
    <button>Follow</button>
    <button>Message</button>
    <p>Followers : <%= data.followers %> &nbsp; &nbsp; Following : <%= data.following %> </p>
    <h2>Accounts that follow you :</h2>
    <hr/>
    <% for(post of data.posts){ %>
        <img src="<%=post.image%>" alt="Pic of <%= post  %>">
        <p>Likes : <%= post.likes %> &nbsp; &nbsp; Comments : <%= post.comments %> </p>
    <% } %>
    <!-- using ejs unescapped code (means it returns html , while escaped means it returns string) -->
    <%- include("includes/footer.ejs")  %>
    <script src="/app.js"></script>
</body>
</html>